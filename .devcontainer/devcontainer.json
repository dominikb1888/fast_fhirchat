{
  "name": "FastAPI Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance"
  ],
  "forwardPorts": [
    3000
  ],
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "root"
}

